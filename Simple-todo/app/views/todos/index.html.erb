<h1>All Todos</h1>
<%= link_to "New Todo", todos_new_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      	<tr>
        <td><%= todo.title %></td>
        <td><%= todo.content %></td>
        <td><%= link_to "Show", todo %></td>
        <td><%= link_to "Edit", edit_todo_path(todo) %></td>
        <td><%= link_to "Destroy", delete_todo_path(todo), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></td>
        </tr>
    <% end %>

  </tbody>
</table>
